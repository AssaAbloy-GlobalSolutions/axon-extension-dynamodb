{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"],
      "automerge": true,
      "matchPackagePatterns": ["*"],
      "groupName": "all"
    },
    {
      "matchUpdateTypes": ["major"],
      "matchPackagePatterns": ["*"],
      "groupName": "all"
    }
  ]
}
